<!--components/z-swiper/z-swiper.wxml-->
<swiper class="swiper revise-swiper"
  autoplay
  interval="{{2000}}"
  duration="{{300}}"
  circular
  indicator-dots
  indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image || item}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>