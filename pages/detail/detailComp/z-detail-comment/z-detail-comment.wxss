/* pages/detail/detailComp/z-detail-comment/z-detail-comment.wxss */
.comment {
  padding: 30px 1px 10px;
  border-bottom: 6px solid #eef;
}
.comment .top {
  border-bottom: 1px solid #eee;
  font-size: 16px;
  padding: 0 0 15px;
}
.comment .top text:nth-child(2) {
  margin-left: 170px;
}
.comment .top text:nth-child(1) {
  margin: 10px;
}

.content {
  padding: 10px 0 5px;
  position: relative;
}
.content image {
  width: 22px;
  height: 60px;
  border-radius: 50%;
  margin: 5px -5px 12px 14px;
}
.content .uname {
  font-size: 16px;
  color: #111;
  position: absolute;
  top: 18px;
  left: 50px;
}

.content .text {
  font-size: 14px;
  text-indent: 2em;
  color: #444;
}
.content .tip {
  padding: 10px 0 0;
  font-size: 12px;
}
.content .tip text:nth-child(1) {
  margin: 0 5px 0;
}