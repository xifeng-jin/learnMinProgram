/* pages/detail/detailComp/z-detail-title/z-detail-title.wxss */
.detail-title {
  border-bottom: 3px solid #eee;
  padding: 0 2px 20px;
}
.top {
  padding: 15px 0;
  font-size: 15px;
  color: #333;
}
.newPrice {
  color: #ff5777;
  font-size: 32px;
}
.oldPrice {
  text-decoration: line-through;
}

.middle {
  border-bottom: 1px solid #eee;
  display: flex;
  padding: 0 0 10px;
  color: #555;
  justify-content: space-between;
  font-size: 14px;
  text-align: center;
}
.mid-item {
  flex: 1;
}

.foot {
  display: flex;
  color: #555;
  justify-content: space-between;
  font-size: 10px;
  padding: 20px 0 0;
  text-align: center;
}
.fo-item {
  flex: 1;
  padding-bottom: 5px;
}
.fo-item image {
  width: 10px;
  height: 10px;
}
