/* pages/profile/profileComp/z-profile-head/z-profile-head.wxss */
.pro-head {
  width: 100%;
  height: 80px;
  background: #ff5777;
  position: relative;
}
.avatar {
  width: 59px;
  height: 59px;
  border-radius: 50%;
  background: #eee;

  position:absolute;
  top: 6px;
  left: 10px;
}
.avatar image {
  width: 100%;
  height: 100%;
}
.pro-head .mid {
  position: absolute;
  top: 15px;
  left: 82px;
  color: white  
}
.mid .login {
  font-size: 18px;
}
.mid .tip image{
  width: 15px;
  height: 15px;
  margin: 5px 0 0 -5px;
}
.mid .tip text {
  font-size: 14px;
}
.pro-head .arrow {
  width: 25px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 15px;
}